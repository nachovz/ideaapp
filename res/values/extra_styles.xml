<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="encabezado">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">#808080</item>
    </style>

    <style name="encabezado_blue">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">#3A70B9</item>
    </style>

    <style name="titulo">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">#808080</item>
    </style>

    <style name="row_light">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="row_medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="row_dark">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">#d9d9d9</item>
    </style>

    <style name="edit_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="detalle_producto" parent="AppBaseTheme">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="detalle_producto.label">
        <item name="android:layout_marginLeft">@dimen/detalle_producto_row_margin</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="detalle_producto.desc">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="detalle_producto.row">
        <item name="android:paddingTop">@dimen/detalle_producto_row_padding</item>
        <item name="android:paddingBottom">@dimen/detalle_producto_row_padding</item>
    </style>

    <style name="detalle_producto.row.light">
        <item name="android:background">@color/light_background</item>
    </style>

    <style name="detalle_producto.row.dark">
        <item name="android:background">@color/dark_background</item>
    </style>
</resources>