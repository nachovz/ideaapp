<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/meta_codigo_textView"
        android:textAlignment="gravity"
        android:padding="@dimen/list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color"
        android:ellipsize="end"
        android:gravity="left"
        android:layout_weight="1" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/meta_meta_textView"
        android:textAlignment="gravity"
        android:padding="@dimen/list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:layout_weight="1" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/meta_pedido_textView"
        android:textAlignment="gravity"
        android:padding="@dimen/list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color"
        android:gravity="center_horizontal|right"
        android:ellipsize="end"
        android:layout_weight="1" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/meta_facturado_textView"
        android:textAlignment="gravity"
        android:padding="@dimen/list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:layout_weight="2" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/meta_valor_textView"
        android:textAlignment="gravity"
        android:padding="@dimen/list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color"
        android:gravity="right" />
</TableRow>