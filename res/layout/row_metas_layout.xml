<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meta_codigo_textView"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:padding="@dimen/metas_list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meta_meta_textView"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:padding="@dimen/metas_list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meta_pedido_textView"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:padding="@dimen/metas_list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meta_facturado_textView"
        android:layout_weight="1"
        android:textAlignment="textEnd"
        android:padding="@dimen/metas_list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meta_valor_textView"
        android:layout_weight="2"
        android:textAlignment="textEnd"
        android:padding="@dimen/metas_list_item_padding"
        android:textStyle="bold"
        android:textColor="@color/metas_list_item_text_color" />
</TableRow>